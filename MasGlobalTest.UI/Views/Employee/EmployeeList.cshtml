@model IEnumerable<MasGlobalTest.UI.Models.EmployeeViewModel>

<form>
    <div class="input-group" style="width:30%">
        <input type="text" class="form-control" placeholder="Employee Id" name="id">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>
<br />

@if (Model.FirstOrDefault() == null)
{
    <div class="alert alert-info">
        <strong>Info!</strong> The Employee you are searching does not exist!
    </div>

}
else
{
    <table class="table table-striped table-bordered table-sm" cellspacing="0" width:"100%">
        <thead>
            <tr>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.ContractTypeName)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th class="th-sm">
                    @Html.DisplayNameFor(model => model.AnnualSalary)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContractTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.AnnualSalary)
                    </td>
                </tr>}
        </tbody>
    </table>
}
